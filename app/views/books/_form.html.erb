<%= form_with model: book do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "label" %>
    <%= form.text_field :title, class: "input" %>
    <% book.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :author, class: "label" %>
    <%= form.text_field :author, class: "input" %>
    <% book.errors.full_messages_for(:author).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :isbn, "ISBN", class: "label" %>
    <%= form.text_field :isbn, class: "input" %>
    <% book.errors.full_messages_for(:isbn).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit class: "button is-link" %>
  </div>
<% end %>
